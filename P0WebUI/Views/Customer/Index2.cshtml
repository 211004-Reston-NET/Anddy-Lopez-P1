@* This tells you that this view will expect to retrieve a list of CustomerVM *@
@model IEnumerable<P0WebUI.Models.CustomerVM>

<h1 class="display-4">List of Customers</h1>

<a class="btn btn-primary text-white" asp-controller="Customer" asp-action="Create">Add Customer</a>
<br /> <!-- This break tag puts a space between elements -->
<br />
<table class="table table-striped table-hover">
    <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Email</th>
        <th>Phone Number</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelitem => item.Name)</td>
            <td>@Html.DisplayFor(modelitem => item.Address)</td>
            <td>@Html.DisplayFor(modelitem => item.Email)</td>
            <td>@Html.DisplayFor(modelitem => item.PhoneNumber)</td>
            <td>
                <!-- First paramter of ActionLink is the name it will give for this element -->
                <!-- Second paramter will point to the action of the customer controller -->
                <!-- Third parameter will give the information from the view to the controller -->
                <button class="btn btn-danger">@Html.ActionLink("Delete", "Delete", new { p_id = item.Id }, new { @style = "color:white;" })</button>
            </td>
        </tr>
    }
</table>

<br />

<!-- We need a form to do a post request -->
<form asp-action="Index2">
    @Html.Label("Search by Name:")
    <br />
    @Html.TextBox("p_name")
    <br />
    <br />
    <input type="submit" value="Search" class="btn btn-primary" />
</form>
<div class="text-center">
    <a href="https://localhost:44362/Customer">Back to Full List</a>
</div>
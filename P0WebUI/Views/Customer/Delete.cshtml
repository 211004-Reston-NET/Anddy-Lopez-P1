@{
}

@model P0WebUI.Models.CustomerVM

<h1 class="display-4">Delete Customer</h1>
<h3>Are you sure you want to delete this Customer?</h3>

<div>
    <dl>
        <dt>
            Id:
            <span class="col-sm-10" style="font-weight: normal">@Html.DisplayFor(model => model.Id)</span>
        </dt>
        <dt>
            Name:
            <span class="col-sm-10" style="font-weight: normal">@Html.DisplayFor(model => model.Name)</span>
        </dt>
        <dt>
            Address:
            <span class="col-sm-10" style="font-weight: normal">@Html.DisplayFor(model => model.Address)</span>
        </dt>
        <dt>
            Email:
            <span class="col-sm-10" style="font-weight: normal">@Html.DisplayFor(model => model.Email)</span>
        </dt>
        <dt>
            Phone Number:
            <span class="col-sm-10" style="font-weight: normal">@Html.DisplayFor(model => model.PhoneNumber)</span>
        </dt>

        <!-- We need a form to do a post rquest -->
        <form asp-action="Delete">
            <!-- This input element is hidden because we don't wnat the user to input some id. We are supplying it instead -->
            <input type="hidden" asp-for="Id"/>
            <input type="submit" value="Delete" class="btn btn-danger"/>
        </form>
    </dl>
</div>
@* This is the Product Index *@
@model IEnumerable<P0WebUI.Models.ProductVM>

<h1 class="display-4">List of Products</h1>

<table class="table table-striped table-hover">
    <tr>
        <th>ID</th>
        <th>Product</th>
        <th>Price</th>
        <th></th>
    </tr>
    @foreach (ProductVM item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelitem => item.Id)</td>
            <td>@Html.DisplayFor(modelitem => item.PName)</td>
            <td>@Html.DisplayFor(modelitem => item.Price)</td>
            <td>
                <button class="btn btn-primary">@Html.ActionLink("Select", "Index", "LineItem", new { p_id = item.Id , p_price = item.Price }, new { @style = "color:white;" })</button>
                <!--                                                                                    ^ this must be the same as in the controller
                                                                                                        doesn't have to be the same as BL tho -->
            </td>
        </tr>
    }
</table>


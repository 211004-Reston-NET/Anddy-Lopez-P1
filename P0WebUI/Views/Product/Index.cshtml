@{
}

@* Product Index *@
@model IEnumerable<P0WebUI.Models.ProductVM>

<h1 class="display-4">List of Products</h1>

<table class="table table-striped table-hover">
    <tr>
        <th>Product</th>
        <th>Price</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelitem => item.PName)</td>
            <td>@Html.DisplayFor(modelitem => item.Price)</td>
            <td>
                <button class="btn btn-primary">@Html.ActionLink("Add to Order", "Index", "Order", new { p_id = item.Id }, new { @style = "color:white;" })</button>
            </td>
        </tr>
    }
</table>
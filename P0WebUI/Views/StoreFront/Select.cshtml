@model P0WebUI.Models.StoreFrontVM

<h1 class="display-4">Shopping Center Select</h1>
<h3>Are you sure you want to select this Store?</h3>

<div>
    <dl>
        <dt>
            Id:
            <span class="col-sm-10" style="font-weight: normal">@Html.DisplayFor(model => model.Id)</span>
        </dt>
        <dt>
            Name:
            <span class="col-sm-10" style="font-weight: normal">@Html.DisplayFor(model => model.SName)</span>
        </dt>
        <dt>
            Address:
            <span class="col-sm-10" style="font-weight: normal">@Html.DisplayFor(model => model.SAddress)</span>
        </dt>
    </dl>
</div>


<form asp-controller="Order" asp-action="Edit1">
    <div asp-validation-summary="ModelOnly"></div>
    <!-- This input element is hidden because we don't wnat the user to input some id. We are supplying it instead -->
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="SAddress" />
    <input type="submit" value="Confirm" class="btn btn-primary" />
</form>
@{
}

@model IEnumerable<P0WebUI.Models.StoreFrontVM>

<h1 class="display-4">List of Store Fronts</h1>

<table class="table table-striped table-hover">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Address</th>
        <th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelitem => item.Id)</td>
            <td>@Html.DisplayFor(modelitem => item.SName)</td>
            <td>@Html.DisplayFor(modelitem => item.SAddress)</td>
            <td>
                <button class="btn btn-primary">@Html.ActionLink("Orders", "StoreOrder", "Order", new { p_id = item.Id }, new { @style = "color:white;" })</button>
            </td>
        </tr>
    }
</table>

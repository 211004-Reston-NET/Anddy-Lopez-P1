@* This is the Store Front Index *@
@model IEnumerable<P0WebUI.Models.StoreFrontVM>

<h1 class="display-4">Select a Shopping Center</h1>

<table class="table table-striped table-hover">
    <tr>
        <th>Name</th>
        <th>Address</th>
        <th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelitem => item.SName)</td>
            <td>@Html.DisplayFor(modelitem => item.SAddress)</td>
            <td>
                <!--<button class="btn btn-primary" asp-controller="Product" asp-action="Index">Shop</button> the button doesn't work so I use a hyperlink instead -->
                <a asp-controller="Product" asp-action="Index">Shop</a>
                <a> | </a>
                <button class="btn btn-primary">@Html.ActionLink("Select", "Select", "StoreFront", new { p_id = item.Id }, new { @style = "color:white;" })</button>
                <!--                                                                                        ^ this must be the same as in the controller
                                                                                                            doesn't have to be the same as BL tho -->
            </td>
        </tr>
    }
</table>

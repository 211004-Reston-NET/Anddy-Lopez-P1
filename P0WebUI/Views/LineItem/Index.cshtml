@* Line Item Index *@
@model P0WebUI.Models.LineItemVM

<h1 class="display-4">Your selected Item</h1>

<div>
    <dl>
        <dt>
            Product ID:
            <span class="col-sm-10" style="font-weight: normal">@Html.DisplayFor(model => model.Id)</span>
        </dt>
        <dt>
            Product:
            <span class="col-sm-10" style="font-weight: normal">@Html.DisplayFor(model => model.Product)</span>
        </dt>
        <dt>
            Price: $@ViewData["Price"]
        </dt>
        <dt>
            Quantity:
            <span class="col-sm-10" style="font-weight: normal">@Html.DisplayFor(model => model.Quantity)</span>
        </dt>

    </dl>
</div>

<br />

<!-- We need a form to do a post rquest -->
<form asp-controller="Order" asp-action="Edit2">
    <input asp-for="Quantity" type="number">
    <!-- This input element is hidden because we don't want the user to input some id. We are supplying it instead -->
    <input type="hidden" asp-for="@ViewData["Price"]" />
    <br />
    <br />
    <input type="submit" value="Add to Order" class="btn btn-primary" />
</form>
<br />
<br />
<a asp-controller="Order" asp-action="Index">Complete your Order</a>
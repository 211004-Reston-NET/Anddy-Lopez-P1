@{
}

@model P0WebUI.Models.LineItemVM

<h1 class="display-4">Update Stock</h1>
<h3>Are you sure this is the item you would like to restock?</h3>

<div>
    <dl>
        <dt>
            ID:
            <span class="col-sm-10" style="font-weight: normal">@Html.DisplayFor(model => model.Id)</span>
        </dt>
        <dt>
            Product:
            <span class="col-sm-10" style="font-weight: normal">@Html.DisplayFor(model => model.Product)</span>
        </dt>
        <dt>
            Quantity:
            <span class="col-sm-10" style="font-weight: normal">@Html.DisplayFor(model => model.Quantity)</span>
        </dt>
    </dl>
</div>

<form asp-action="Restock">
    <input type="hidden" asp-for="Id" />
    <input type="number" asp-for="Quantity" />
    <br />
    <br />
    <input type="submit" value="Restock" class="btn btn-primary" />
</form>
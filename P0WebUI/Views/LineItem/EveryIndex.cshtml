@{
}

@model IEnumerable<P0WebUI.Models.LineItemVM>

<h1 class="display-4">List of Line Items</h1>

<!--<a class="btn btn-primary text-white" asp-controller="StoreFront" asp-action="Create">Add Store Front</a>-->

<table class="table table-striped table-hover">
    <tr>
        <th>Product ID</th>
        <th>Product Name</th>
        <th>Quantity</th>
        <th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelitem => item.Id)</td>
            <td>@Html.DisplayFor(modelitem => item.Product)</td>
            <td>@Html.DisplayFor(modelitem => item.Quantity)</td>
            <td>
                <button class="btn btn-primary">@Html.ActionLink("Restock", "Restock", "LineItem", new { p_id = item.Id }, new { @style = "color:white;" })</button>
                <!--                                                                                     ^ this must be the same as in the controller
                                                                                                           doesn't have to be the same as BL tho -->
            </td>
        </tr>
    }
</table>